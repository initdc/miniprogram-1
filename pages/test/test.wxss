/* pages/test/test.wxss */
Page {
  padding-bottom: 200px;
}

.mova-1 {
  height: 200px;
  background-color: lightgray;
}

.mova-2 {
  height: 200px;
  width: 100%;
  background-color: lightcyan;
}

movable-view {
  width: 50px;
  height: 50px;
  background-color: gray;
}

scroll-view {
  height: 400px;
  background-color: lightblue;
}

.scroll-elem {
  width: 95%;
  display: flex;
  flex-direction: column;
  background-color: lightgray;
}

.scroll-elem image {
  width: 400px;
  height: 400px;
}

share-element {
  height: 200px;
  background-color: lightcyan;
}

page-container share-element {
  margin-top: 20px;
}

swiper {
  width: 100%;
  height: 400px;
  margin-top: 20px;
}

swiper-item {
  width: 100%;
}

swiper-item image {
  display: flex;
  margin-left: auto;
  margin-right: auto;
  width: 400px;
  height: 400px;
}

progress {
  margin-top: 10px;
  margin-bottom: 10px;
}

progress:last-child {
  width: 80%;
}

.editor-container {
  height: 250px;
  width: 100%;
}

editor {
  background-color: lightgoldenrodyellow;
}

textarea {
  width: 100%;
  background-color: lightblue;
}

keyboard-accessory {
  width: 60%;
  background-color: lightgreen;
}

picker-view {
  width: 100%;
  height: 200px;
  margin-left: 50px;
  margin-right: 50px;
}

.pick-up {
  background-color: gray;
  opacity: 20%;
}

radio-group {
  display: flex;
  flex-direction: column;
}

audio {
  padding-left: 3%;
  padding-right: 3%;
  padding-top: 10px;
  padding-bottom: 10px;
}

#audioPlayer2 {
  display: flex;
  flex-direction: row;
}

radio {
  padding-left: 10px;
}

camera {
  width: 100%;
  height: 300px;
}

.camera-btn-group {
  display: flex;
  flex-direction: row;
  padding: 5px;
}